#!/usr/bin/env ruby

require "google/cloud/storage"

storage = Google::Cloud::Storage.new(
	project_id: 'hebe-001',
	credentials: 'gcp.json'
)

bucket = storage.bucket 'hebe-001.appspot.com'

if bucket.file 'cache/bundle.tar.bz2'

	bucket.download 'cache/bundle.tar.bz2', '/home/debian/.bundle.tar.bz2'

end

exit 0
