.tracks
  - @tracks.each do |track|
    .row{ class: cycle('odd', 'even') }
      %ul
        %li
          .col-md-2
            = link_to track.artist, music_index_path(q: track.artist), default_transition
          .col-md-2
            = track.title
          .col-md-2
            = track.album
          .col-md-1
            = track.genre
          .col-md-1
            = link_to track.year, music_index_path(q: track.year), default_transition
          .col-md-1
            .badge.duration= track.duration
          .col-md-1
            = fa_processing
            = fa_play({ data: { id: track.id } })

:javascript
  new App.Tracks(#{@release.track_urls.to_json.html_safe})
  new App.TrackRows()
