:scss
  #{render partial: "music/images.scss"}

.images
  - if @release.images.any?
    .row
      .polaroid-images
        - @release.images.each do |image|
          = link_to image.file.url, class: :swipebox do
            %div{ id: "img-#{image.id}" }

:javascript
  $(document).ready(function(e) {
    observe_polaroids();
    $(".swipebox").swipebox();
  });
