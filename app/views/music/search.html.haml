- content_for :head do
  = javascript_include_tag :music

.container
  = form_tag search_music_index_path, default_transition.merge(method: :get) do
    = hidden_field_tag :rows, search_rows
    .form-group
      .col-md-5
        = text_field_tag :q, params[:q], class: "form-control"
      .col-md-5
        %button.btn.btn-default{ type: "submit" } Search
  .clear

  %ol
    - @releases.each do |release_id, infos|
      %li
        %h4
          .label.label-primary
            = link_to infos[:year], search_music_index_path(default_params.merge(q: infos[:year])), default_transition
          .label.label-info= infos[:format_name]
          - if infos[:subfolder]
            %span.label.label-success.label-as-badge
              = link_to infos[:subfolder], search_music_index_path(default_params.merge(q: infos[:subfolder])), default_transition
          %strong
            = link_to highlight(infos[:formatted_name], search_terms_array), music_path(release_id, default_params), default_transition

  %small.margin-20
    = "Page rendered in %s seconds - %s" % [ Time.now - @t1, Time.now ]