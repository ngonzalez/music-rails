- content_for :head do
  = javascript_include_tag :music

.container
  = form_tag search_music_index_path, default_transition.merge({ method: :get }) do
    = hidden_field_tag :rows, search_rows
    .form-group
      .col-md-5
        = text_field_tag :q, params[:q], class: "form-control"
      .col-md-5
        %button.btn.btn-default{ type: "submit" } Search

  .clear

  %small.margin-20
    = "%s results" % [ @tracks.length ]

  %ol
    - @tracks.each do |release_id, infos|
      %li
        %h4
          .label.label-info= infos[:folder].upcase
          .badge= infos[:format_name]
          %strong= link_to highlight(infos[:name], search_terms_array),  |
                           music_path(release_id, default_params),       |
                           default_transition                            |

  %small.margin-20
    = "Page rendered in %s seconds - %s" % [ Time.now - @t1, Time.now ]
